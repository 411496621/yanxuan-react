@import "../../common/stylus/mixins.styl"
#footer
  width 100%
  bottom 0
  height 80px
  display flex
  background: #fff
  z-index 10
  top-border-1px(#ccc)
  @extends .border-1px
  position fixed
  .item
    height 50px
    flex 1
    display flex
    flex-direction column
    align-items center
    &.active
      color #BF4248
      i
        font-weight bold
    span
      margin-top 5px
    i
      font-size 36px
      margin-top 10px
