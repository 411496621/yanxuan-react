.find-goods
  width: 100%
  height: 100%
  .find-goods-header
    left 0
    top 0
    width 100%
    position fixed
    z-index 5
    height 50*2px
    color #666
    font-size 20*2px
    background #FAFAFA
    border-bottom 2px solid #E2E2E2
    &:after
     content ''
     display block
     position absolute
     left 0
     bottom 0
     width: 100%
     height 2px
     background: #E2E2E2
    >div
      position absolute
      top 50%
      transform translateY(-50%)
      i
       font-size 48px
      &.left
        left 10px
      &.right
        right 10px
      &.middle
        left 50%
        transform translate(-50%,-50%)

  .nav-wrapper
    background: #FAFAFA
    height 36*2px
    position fixed
    width 100%
    left: 0
    top: 100px
    z-index 5
    .nav-list
      height 100%
      display flex
      justify-content space-around
      li
        box-sizing border-box
        height 36*2px
        line-height 36*2px
        text-align center
        font-size 14*2px
        margin 0 10*2px
        padding 0 4*2px
        color #7F7F7F
        &.active
          border-bottom 4px solid #B4282D
          a
            color  #B4282D
