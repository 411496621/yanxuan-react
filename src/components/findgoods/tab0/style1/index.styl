.style1
  background: #fff
  width: 100%
  box-sizing border-box
  margin 20px 0
  padding 18*2px 15*2px
  .u-name
    margin-bottom 24px
    color #333
    white-space nowrap
    overflow: hidden;
    text-overflow ellipsis
    font-size 14*2px
    line-height 18*2px
    span
      display inline-block
      vertical-align middle
    .ava
      width: 27*2px
      height: 27*2px
      overflow: hidden;
      border-radius: 50%;
      -webkit-box-sizing: border-box;
      box-sizing: border-box;
      border: 0.5px solid #d9d9d9;
      margin-right: 6px
      img
        width: 100%
        height: 100%
  .title
    font-size: 18*2px
    color: #333;
    line-height: 26*2px
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    margin -4*2px 0 8*2px
  .u-pic
    width: 345*2px;
    height: 188*2px;
    position: relative;
    margin-bottom: 10*2px;
    overflow: hidden;
    border-radius: 8px
    img
      width 100%
      height 100%
      display block
  .u-rcount
    font-size: 22px
    color: #999;
    line-height: 32px
    margin-top: 18px
